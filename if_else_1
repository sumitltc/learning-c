#include <stdio.h>

int main()
{
    int qty, dis;
    float tot, rate;
    printf("enter the qty and rate");
    scanf(" %d %f",&qty, &rate);
    if(qty>1000)
        dis =10;
    else
        dis = 0;
        
    tot = (qty*rate)-(qty*rate * dis/100);
    printf("the total amt = rs%f\n",tot);
    
    return 0;
}
